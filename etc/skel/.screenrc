backtick 1 10 10 "$HOME/.bat_info.sh"

hardstatus alwayslastline "%w%?%=%c %1`"
#caption always '%w'
startup_message off

bind j next
bind ^j next
bind k prev
bind ^k prev
#use uppercase K to kill window

#copybuffer to x clipboard
bind 'C' eval writebuf 'exec /bin/bash -c "/usr/bin/xsel -bi < /tmp/screen-exchange"'

